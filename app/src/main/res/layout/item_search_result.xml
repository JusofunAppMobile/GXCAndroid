<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/layout_root"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="8dp"
        android:paddingRight="8dp">

        <LinearLayout
            android:id="@+id/vTop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/img_item_2"
            android:orientation="vertical"
            android:padding="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">

                <TextView
                    android:id="@+id/company_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="#333"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/text_report_preview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:layout_gravity="center_vertical"
                    android:maxLines="1"
                    android:text="预览"
                    android:textColor="@color/item_option_text"
                    android:textSize="16sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/company_state"
                style="@style/C_Xucun" />

            <LinearLayout style="@style/C_110">

                <TextView
                    style="@style/C_111"
                    android:text="法定代表人：" />

                <TextView
                    android:id="@+id/tvLegal"
                    style="@style/C_113"
                    android:textColor="#1E9EFB" />

            </LinearLayout>

            <LinearLayout style="@style/C_110">

                <TextView
                    style="@style/C_111"
                    android:text="注册资金：" />

                <TextView style="@style/C_Empty" />

                <TextView
                    android:id="@+id/company_info"
                    style="@style/C_113" />

            </LinearLayout>

            <LinearLayout style="@style/C_110">

                <TextView
                    style="@style/C_111"
                    android:text="成立时间：" />

                <TextView style="@style/C_Empty" />

                <TextView
                    android:id="@+id/tvEstablish"
                    style="@style/C_113" />

            </LinearLayout>
        </LinearLayout>

        <!--img_bott_gra-->
        <LinearLayout
            android:id="@+id/relate_layout"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:background="@drawable/img_item_1"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <TextView
                android:id="@+id/tvRelate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="2dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="#999"
                android:textSize="12sp" />

        </LinearLayout>


    </LinearLayout>
    <ImageView
        android:id="@+id/img_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:src="@drawable/img_constant_select_no" />
</RelativeLayout>